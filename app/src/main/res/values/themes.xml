<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cinematique" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroundapp</item>
        <!-- Navigation bar color (bottom bar) -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/backgroundapp</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background to your custom drawable -->
        <item name="windowSplashScreenBackground">@drawable/splash_background</item>
        <!-- Ensure the window background is also the splash background to prevent white flash -->
        <item name="android:windowBackground">@drawable/splash_background</item>

        <!-- The animated icon is already part of splash_background.xml,
             but you can also explicitly set it here if you had a separate icon.
             For layer-list drawables like splash_background, this effectively
             uses the entire drawable as the icon. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_background</item>

        <!-- Optional: set a custom duration for the splash screen -->
        <item name="windowSplashScreenAnimationDuration">1000</item> <!-- 1 second -->

        <!-- Optional: Post-splash screen background color if transitioning smoothly -->
        <item name="postSplashScreenTheme">@style/Theme.Cinematique</item>
    </style>

</resources>
